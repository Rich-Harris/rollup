{
	"root": true,
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"plugins": ["prettier"],
	"extends": ["plugin:prettier/recommended"],
	"rules": {
		"prettier/prettier": "error"
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"settings": {
		"import/ignore": [0, ["\\.path.js$"]]
	}
}
